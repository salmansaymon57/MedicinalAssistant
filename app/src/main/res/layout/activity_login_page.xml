<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_fstpg"
    >

    <TextView
        android:id="@+id/mntitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text=" MEDCINAL
ASSISTANT"
        android:textSize="50sp"
        android:fontFamily="@font/geosanslight"
        android:paddingTop="30dp"
        android:layout_margin="8dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"

        />

    <Button
        android:id="@+id/profile1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_btn"
        android:text="PROFILE 1"
        android:fontFamily="@font/geosanslight"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_btn"
        android:fontFamily="@font/geosanslight"
        android:text="PROFILE 2"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_btn"
        android:text="PROFILE 3"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:fontFamily="@font/geosanslight"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />
    <Button
        android:id="@+id/create_new_profile_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_btn"
        android:text="CREATE A NEW PROFILE"
        android:textSize="18sp"
        android:fontFamily="@font/geosanslight"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_margin="16dp"
        />


</LinearLayout>
